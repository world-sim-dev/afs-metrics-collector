# Kubernetes 部署环境变量配置示例
# 复制此文件为 .env.k8s 并根据实际环境修改

# AFS API 配置
AFS_ACCESS_KEY=YOUR_ACCESS_KEY_HERE
AFS_SECRET_KEY=YOUR_SECRET_KEY_HERE
AFS_BASE_URL=https://afs.cn-sh-01.sensecoreapi.cn

# AFS 卷配置 (JSON 格式)
# 单个卷示例
AFS_VOLUMES=[{"volume_id": "YOUR_VOLUME_ID_HERE", "zone": "cn-sh-01e"}]

# 多个卷示例
# AFS_VOLUMES=[{"volume_id": "volume1", "zone": "cn-sh-01e"}, {"volume_id": "volume2", "zone": "cn-sh-01f"}]

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
REQUEST_TIMEOUT=30

# 数据收集配置
COLLECTION_TIMEOUT=25
COLLECTION_MAX_RETRIES=3
COLLECTION_RETRY_DELAY=2
COLLECTION_CACHE_DURATION=30

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# Kubernetes 特定配置
K8S_NAMESPACE=afs-metrics
K8S_IMAGE=afs-metrics-collector:latest
K8S_REPLICAS=2